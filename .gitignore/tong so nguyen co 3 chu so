#include <iostream>
#include <cmath>

using namespace std;

int main(int argc, char** argv) {
	int n;
	int tong = 0;
	
	cout<<"nhap so nguyen co 3 chu so tu ban phim: ";
	cin>>n;
	
	if(n > 99 && n < 1000)
	{
		do
		{
			tong = tong + n%10;
			n=n/10;
		}while(n);
		
		cout<<"tong chu so cua so nguyen co 3 chu so = "<<tong;
	}
	else
	{
		cout<<"day khong la so nguyen co 3 chu so";
	}
	return 0;
}
